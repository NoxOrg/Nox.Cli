{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "NOX.Cli Command",
    "description": "A Nox.Cli command",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "branch": {
            "type": "string",
            "description": "Command syntax",
            "oneOf": [
                {"const": "new", "description": "New command"},
                {"const": "sync", "description": "Sync command"}
            ]
        },
        "command": {
            "type": "string",
            "description": "Command option",
            "oneOf": [
                {"const": "service", "description": "New service"},
                {"const": "azure-active-directory", "description": "Sync azure-active-directory"},
                {"const": "database", "description": "Sync database"},
                {"const": "helm-chart", "description": "Sync helm-chart"},
                {"const": "version-control", "description": "Sync version-control"}
            ]
        },
        "command-alias": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "examples": {
            "type": "array"
        }
    }
}