{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "NOX.Cli Command",
    "description": "A Nox.Cli command",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "branch": {
            "type": "string",
            "description": "Command syntax"
        },
        "command": {
            "type": "string",
            "description": "Command option"
        },
        "command-alias": {
            "type": "string",
            "description": "A shortened valid alias alternative to the full command option"
        },
        "description": {
            "type": "string",
            "description": "A description and usage guide for the command"
        },
        "examples": {
            "type": "array",
            "description": "Illustrative examples of the command usage and syntax"
        }
    }
}